<main class="container">

  <section class="greeting">

    
      <div class="card-body">
        <h3 class="card-title">Good Morning!</h3>
        Name: {{last_name}} {{first_name}}<br>
        Gender: {{gender}}<br>
        Email: {{email}}<br>
        Phone: {{phone_number}}<br>
        Role: {{role}}<br>

      <a href="/patientList"><button type="button" id="btn" class="btn btn-primary btn-lg col-md-12">Current
          Patients</button></a>
      </div>
    
  </section>

  <form class="addPatient">
  <h2>Add New Patient</h2>
    <div class="name">
      <input type="text" class="form-control " id="firstNameInput" placeholder="First Name"><br>
      <input type="text" class="form-control" id="lastNameInput" placeholder="Last Name"><br>
    </div>
    <br>
    <input type="string" class="form-control" id="inputDateOfBirth" placeholder="Date of Birth(MM-DD-YYYY)"><br>
    <input type="string" class="form-control" id="genderInput" placeholder="Gender"><br>
    <input type="string" class="form-control" id="inputAddress" placeholder="1234 Main St"><br>
    <input type="string" class="form-control" id="inputPhoneNumber" placeholder="Phone Number"><br>
    <input type="string" class="form-control" id="inputEmail4" placeholder="Email"><br>
    <input type="string" class="form-control" id="inputDoctorID" placeholder="Primary Doctor ID"><br>
    <input class="btn btn-primary" onclick="formSubmission()" value="Submit"><br>
    </div>
  </form>
  </div>
  </div>
</main>

<script src="/js/doctor.js"></script>